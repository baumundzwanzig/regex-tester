{
  "name": "vscode-regex-tester",
  "displayName": "RegEx Tester for VSCode",
  "description": "You can input Regex-Strings and the extension will highlight matches.",
  "publisher": "baumundzwanzig",
  "repository": {
    "type": "git",
    "url": "https://github.com/baumundzwanzig/regex-tester.git"
  },
  "version": "0.2.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "regex-tester.findRegex",
        "title": "RegEx finden",
        "icon": "$(regex)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "regex-tester.findRegex",
          "when": "editorTextFocus && !editorReadonly",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "regex-tester.findRegex",
        "key": "ctrl+shift+alt+r",
        "when": "editorTextFocus && !editorReadonly"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
